<odoo>

    <record id="micro_factura_view" model="ir.ui.view">

        <field name="name">Vista formulario de facturas</field>
        <field name="model">micro.factura</field>
        <field name="arch" type="xml">
            <form>
                <header>

                </header>

                <sheet>
                    <div class="oe_title">
                        
                    </div>

                    <group>
                        <group colspan="2">
                            <h1 style="display: flex;">
                                <p style="margin-right:10px">Factura No. </p>
                                <field name="name" readonly="1"/>
                            </h1>
                        </group>
                        <group>
                            <field name="nombre"
                                placeholder="Nombre Completo"
                                required="1"
                                default_focus="1" class="oe_inline" />
                            <field name="cedula"
                                placeholder="CÃ©dula"
                                required="1"
                                default_focus="1" class="oe_inline" />
                            <field name="fch_factura" readonly="1"/>
                        </group>
                    </group>

                    <separator string="Detalles" />


                </sheet>
                <!--<script>
                    console.log('hola mundo');
                </script>-->
            </form>
        </field>

    </record>

