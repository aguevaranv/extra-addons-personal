<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="action_open_factura" model="ir.actions.act_window">
        <field name="name">Factura</field>
        <field name="res_model">micro.factura</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_open_micro_servicio" model="ir.actions.act_window">
        <field name="name">Servicio</field>
        <field name="res_model">micro.servicio</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_principal" name="Facturas"/>
    <menuitem id="menu_horizontal" name="Ventas" parent="menu_principal"/>
    <menuitem id="menu_vertical_factura" name="Factura" parent="menu_horizontal" action="action_open_factura"/>
    <menuitem id="menu_vertical_micro_servicio" name="Servicios" parent="menu_horizontal" action="action_open_micro_servicio"/>


</odoo>